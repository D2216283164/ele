/* pages/components/addShop/addShop.wxss */
.shop-list{
  width: 100%;
  height: 865rpx;
  position: relative;
}
.nr{
  width: 100%;
  height: 89%;
  display: flex;
}
.meal{
  width: 160rpx;
  background-color: #f5f3f7;
  padding: 24rpx;
  /* padding: 20rpx;
  font-size: 24rpx;
  color: rgb(240, 20, 20);
  font-weight: 200;
  line-height: 28rpx; */
}
.ul{
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  font-weight: 200;
  overflow: auto;
}
.li{
  height: 108rpx;
  /* line-height: 108rpx; */
  border-bottom: 1rpx solid rgba(7, 17, 27, 0.1);
  box-sizing: border-box;
  padding-top:30rpx; 
}
/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.meal-list{
  width: 100%;
  overflow: auto;
}
.list-info{
  width: 100%;
}
.top-name{
  width: 100%;
  height: 52rpx;
  line-height: 52rpx;
  background-color: #f5f3f7;
  font-size: 24rpx;
  box-sizing: border-box;
  border-left: 7rpx solid #d9dde1;
  color: rgb(147, 153, 159);
}
.item{
  padding: 36rpx;
  display: flex;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(7, 17, 27, 0.1);
}
.info{
  margin-left: 20rpx;
}
.info-name{
  font-size: 28rpx;
  color: rgb(7, 17, 27);
  line-height: 28rpx;
}
.info-class{
  font-size: 20rpx;
  color: rgb(147, 153, 159);
  line-height: 20rpx;
}
.info-price{
  font-size: 20rpx;
  color: rgb(147, 153, 159);
  font-weight: normal/700;
  line-height: 48rpx;
  position: relative;
}
.info-price text{
  color: red;
}
.control{
  display: flex;
  position: absolute;
  margin-left: 250rpx;
  top: 0;
}
.control view{
  width: 48rpx;
  height: 48rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  font-size: 48rpx; 
}
.control .increase{
  color: rgb(0, 160, 220);
  border: 5rpx solid rgb(0, 160, 220);
  box-sizing: border-box;
}
.control .add{
  background: rgb(0, 160, 220);
  color: white;
}
.control .num{
  width: 48rpx;
  line-height: 48rpx;
  font-size: 20rpx;
}
.item image{
  width: 114rpx;
  height: 114rpx;
  /* height: 140rpx; */
}
.cart{
  width: 100%;
  position: absolute;
  bottom: 0rpx;
  height: 100rpx;
  background: #141d27;
  box-sizing: border-box;
  padding: 16rpx;
  display: flex;
}
.cart .big-circle{
  width: 116rpx;
  height: 116rpx;
  border-radius: 50%;
  background: #141d27;
  position: absolute;
  bottom: 0rpx;
  left: 16rpx;
  text-align: center;
}
.big-circle .small-circle{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  margin-left: 16rpx;
  margin-top: 12rpx;
}
.cart .allnum{
  font-size: 32rpx;
  color:  rgba(255, 255, 255, 0.4);
  padding: 20rpx;
  margin-left: 130rpx;
  border-right: 1rpx solid rgba(255, 255, 255, 0.4);
  font-weight: 700;
}
.cart .pull{
   font-size: 32rpx;
   color: rgba(255, 255, 255, 0.4);
   padding: 20rpx;
}
.cart .buy{
  float: right; 
  color: rgba(255, 255, 255, 0.4);
  width: 210rpx;
  font-size: 24rpx;
  font-weight: 700;
  height: 100%;
  text-align: center;
  line-height: 75rpx;
  background: rgba(0, 0, 0, 0.6)
}