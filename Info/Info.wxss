/* pages/view/Info/Info.wxss */
.box{
  width: 100%;
  height: 100%;
}
.list-info{
  width: 100%;
  height: 100%;
  overflow: auto;
  position: relative
}
.list-info image{
  width: 100%;
  height: 750rpx;
}
.info{
  width: 100%;
  box-sizing: border-box;
  padding: 36rpx;
}
.name{
  font-size: 28rpx; 
  font-weight: 700;
  color: rgb(7, 17, 27)
}
.sell{
  font-size: 20rpx;
  color: rgb(147, 153, 159);
}
.price{
  color: rgb(240, 20, 20);
  font-size: 28rpx;
  font-weight: 700;
  width: 100%;
  line-height: 48rpx;
}
.add{
   float: right;
   width: 148rpx;
   height: 48rpx;
   font-size: 20rpx;
   color: rgb(255, 255, 255);
   background: rgb(0, 160, 220);
   text-align: center;
   border-radius: 24rpx;
}
.geduan{
  width: 100%;
  height: 32rpx;
  background: #f3f5f7;
  border-top: 1rpx solid rgba(7, 17, 27, 0.1);
  border-bottom: 1rpx solid rgba(7, 17, 27, 0.1);
}
.tell{
  color: rgb(77, 85, 93);
  font-size: 24rpx;
  line-height: 48rpx;
}
.assess{
  width: 100%;
  display: flex;
  padding-top: 36rpx;
  padding-bottom: 36rpx;
  border-bottom: 1rpx solid rgba(7, 17, 27,0.1)
}
.all{
  padding: 16rpx;
  font-size: 24rpx;
  color: white;
  background: rgb(0, 160, 220);

}
.pull{
  padding: 16rpx;
  font-size: 24rpx;
  color: white;
  background: rgba(0, 160, 220,0.2);
  margin-left: 16rpx;
}
.down{
  padding: 16rpx;
  font-size: 24rpx;   
  color: white;
  background: rgba(77, 85, 93,0.3);
  margin-left: 16rpx;
  
}
.look{
  font-size: 24rpx;
  color: rgb(147, 153, 159);
  /* height: 48rpx; */
  line-height: 50rpx;
  width: 100%;
  border-bottom: 1rpx solid rgba(7, 17, 27,0.1)
}
.logo{
  margin-top: 24rpx;
}
.a-all{
  padding-top: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid rgba(7, 17, 27, 0.1);
}
.item{
  font-size: 20rpx;
  color: rgb(147, 153, 159);
  width: 100%;
}
.user{
  float: right;
}
.user image{
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-left: 12rpx;
}
.content{
  font-size: 24rpx;
  color: rgb(7, 17, 27);
}
