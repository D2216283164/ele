/* pages/components/cart/cart.wxss */
.cart{
  width: 100%;
  /* position: absolute; */
  /* bottom: 0rpx; */
  height: 100rpx;
  background: #141d27;
  box-sizing: border-box;
  padding: 16rpx;
  display: flex;
}
.cart .big-circle{
  width: 116rpx;
  height: 116rpx;
  border-radius: 50%;
  background: #141d27;
  position: absolute;
  bottom: 0rpx;
  left: 16rpx;
  text-align: center;
}
.big-circle .small-circle{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  margin-left: 16rpx;
  margin-top: 12rpx;
}
.cart .allnum{
  font-size: 32rpx;
  color:  rgba(255, 255, 255, 0.4);
  padding: 20rpx;
  margin-left: 130rpx;
  border-right: 1rpx solid rgba(255, 255, 255, 0.4);
  font-weight: 700;
}
.cart .pull{
   font-size: 32rpx;
   color: rgba(255, 255, 255, 0.4);
   padding: 20rpx;
}
.cart .buy{
  float: right; 
  color: rgba(255, 255, 255, 0.4);
  width: 210rpx;
  font-size: 24rpx;
  font-weight: 700;
  height: 100%;
  text-align: center;
  line-height: 75rpx;
  background: rgba(0, 0, 0, 0.6)
}